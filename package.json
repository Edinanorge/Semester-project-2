{
  "name": "auction-app",
  "version": "0.0.1",
  "description": "Auction app for Noroff",
  "main": "index.js",
  "tyoe": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "sass src/scss:dist/css",
    "start": "sass --watch src/scss:dist/css & live-server",
    "format": "prettier -w src/js/**/*.js",
    "lint": "eslint src/**/*.js",
    "lint-fix": "eslint src/**/*.js",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Edinanorge/Semester-project-2.git"
  },
  "keywords": [
    "auction",
    "marked",
    "bootstrap",
    "sass",
    "eslint"
  ],
  "author": "Edina Isztojka",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Edinanorge/Semester-project-2/issues"
  },
  "homepage": "https://github.com/Edinanorge/Semester-project-2#readme",
  "devDependencies": {
    "eslint": "^8.38.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.1",
    "live-server": "^1.2.2",
    "prettier": "^2.8.7",
    "sass": "^1.62.0"
  },
  "dependencies": {
    "bootstrap": "^5.2.3"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "eslint --cache --fix"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ],
    "*.css": [
      "prettier --write"
    ]
  }
}
